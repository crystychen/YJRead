<view class="wux-class wux-media {{ align ? 'wux-media--align-' + align : '' }}">
    <view class="wux-media__hd">
        <image class="wux-media__thumb wux-class-thumb" src="{{ thumb }}" mode="aspectFit" style="{{ thumbStyle }}" wx:if="{{ thumb }}" />
    </view>
    <view class="wux-media__bd wux-class-body">
        <view class="wux-media__title wux-class-title" wx:if="{{ title }}">{{ title }}</view>
        <view class="wux-media__desc wux-class-desc" wx:if="{{ label }}">{{ label }}</view>
        <slot></slot>
    </view>
</view>