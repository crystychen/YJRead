/* menu */

.menu-wrap {
    box-sizing: border-box;
    margin: 20rpx 30rpx;
    /* margin-bottom: 10rpx; */
}

.menu {
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(96, 96, 96, 0.2);
    position: relative;
}

.menu-item {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    margin-right: 0;
    flex-direction: row;
    align-items: center;
    position: relative;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.menu-item .img {
    width: 36rpx;
    height: 36rpx;
    margin-right: 0;
}

.menu-item .right {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.menu-item .badge {
    margin-right: 20rpx;
}

.menu-item .cart {
    width: 18rpx;
    height: 18rpx;
    border-top: 4rpx solid #8e8e93;
    border-right: 4rpx solid #8e8e93;
    transform: rotate(45deg);
}

.menu-item .menu-title {
    color: #424242;
    font-size: 32rpx;
    margin: 0 20rpx;
}

.menu-item .desc {
    color: #c5c5c5;
    position: absolute;
    right: 30rpx;
}

.time-num {
    color: #3971fb;
    padding: 0 10rpx;
    margin-right: 8rpx;
}