/* modal */

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 1;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.modal {
    position: fixed;
    top: 30rpx;
    left: 50%;
    transform: translate(-50%);
    width: 610rpx;
    height: 1050rpx;
    z-index: 1001;
    border-radius: 20rpx;
    /* background: #fff; */
    overflow: hidden;
}

.close {
    position: absolute;
    right: 20rpx;
    top: 10rpx;
    text-align: center;
    font-weight: bold;
    z-index: 1;
    font-size: 36rpx;
    color: #fff;
}

.close::before {
    content: "\2716";
}

.modal-header {
    width: 100%;
    height: 160rpx;
    background: #24418d;
    color: #fff;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    padding: 0 30rpx;
    box-sizing: border-box
}

.header-name {
    width: 100%;
    box-sizing: border-box;
    font-size: 32rpx;
    font-weight: bold;
    margin: 10rpx 0;
}

.header-tip {
    width: 100%;
    font-size: 24rpx;
    margin: 10rpx 0;
}

.modal-header .bcg-img {
    width: 100%;
    height: 160rpx;
    /* background: #fff */
    background: #24418d;
    position: absolute;
    top: 0;
    z-index: -1;
}

.modal-content {
    background: #fff;
}

.modal .btn-container {
    position: absolute;
    bottom: 0;
    margin: 0;
    width: 100%
}

.btn.active {
    background: linear-gradient(to right, #9034f0, #3772fb);
    color: #fff;
}

.modal .btn-container .btn {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 30rpx;
    text-align: center;
    box-sizing: border-box;
    /* border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx; */
}


/* vertical item */

.vertical-item {
    position: relative;
    /* width: 100%; */
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 30rpx 0 30rpx 0;
    border-bottom: 1rpx solid #e5e5e5;
    margin: 0 20rpx;
}

.vertical-item:last-child {
    border: none;
}

.vertical-item .info {
    position: relative;
    /* height: 246rpx; */
    height: 166rpx;
    width: 460rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    margin-left: 20rpx;
}

.vertical-item .info .title {
    font-size: 30rpx;
    font-weight: bold;
    color: #000;
    width: 70%;
}

.vertical-item .img {
    width: 120rpx;
    height: 166rpx;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 10rpx 0rpx #eee9e5;
}

.vertical-item .infos-desc {
    display: inline-block;
    color: #c5c5c5;
    /* height: 74rpx; */
    overflow: hidden;
    display: -webkit-box;
    white-space: initial;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.vertical-item .item-btn {
    position: absolute;
    right: 0;
    top: 0;
    width: 130rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: #ebf1ff;
    color: #3871fe;
    border-radius: 50rpx;
    box-sizing: border-box;
}

.vertical-item .info .row {
    width: 100%
}