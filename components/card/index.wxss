.i-card {
  margin: 0 30rpx;
  font-size: 28rpx;
  overflow: hidden;
  position: relative;
  /* background: #fff; */
  /* border: 1rpx solid #dddee1; */
  border-radius: 10rpx; 
  box-shadow: 0px 0px 25rpx #dddee1;
}

.i-card-bcg-img {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.i-card-full {
  margin: 0;
  border-left: none;
  border-right: none;
  border-radius: 0;
}

.i-card-header {
  display: flex;
  padding: 6px 16px;
  align-items: center;
}

.i-card-header-content {
  /* width: 100%;
  display: flex; */
  flex: 1;
  text-align: left;
  font-weight: bold;
  /* flex-direction: row;
  align-content: left;
  align-items: center */
}

.i-card-header-thumb {
  display: inline-block;
  width: 64px;
  height: 64px;
  position: relative;
  margin: 10rpx auto;
  overflow: hidden;
  background-size: cover;
  vertical-align: middle;
  border-radius: 50%;
}

.i-card-header-title {
  display: inline-block;
  vertical-align: middle;
  font-size: 14px;
  color: #1c2438;
}

.i-card-header-extra {
  text-align: right;
  margin: 6rpx 0;
}

.i-card-body {
  position: relative;
  padding: 6px 16px;
  color: #495060;
  font-size: 14px;
}

.i-card-body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  /* border: 0 solid #e9eaec;
  border-top-width: 1px; */
}

.i-card-footer {
  position: relative;
  padding: 6px 16px;
  color: #80848f;
  font-size: 12px;
}

.column {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}