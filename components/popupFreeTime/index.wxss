/* 弹窗 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 1;
  overflow: hidden;
  z-index: 1000;
}

.modal {
  position: fixed;
  top: 200rpx;
  left: 50%;
  transform: translate(-50%);
  width: 540rpx;
  height: 700rpx;
  z-index: 1001;
  background: #fff;
  border-radius: 20rpx;
}

.close {
  position: absolute;
  right: 0;
  top: 10rpx;
  text-align: center;
  font-weight: bold;
  z-index: 1;
  color: #fff;
}

.close::before {
  content: "\2716";
}
.bcgImg {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.modal-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 1;
  box-sizing: border-box;
}

.modal-header {
  width: 100%;
  height: 360rpx;
  /* background: linear-gradient(155deg, #1393fc 15%, #5164f7 85%); */
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tip {
  color: #fff;
  font-size: 30rpx;
}

.desc {
  margin: 0 auto;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  margin-top: 10rpx;
}

.num {
  color: #fff;
  font-weight: bold;
  padding: 0 8rpx;
  font-size: 100rpx;
  height: 180rpx;
  line-height: 180rpx;
}

.min {
  color: #fff;
}

.modal-content .btn-container {
  width: 100%;
  position: absolute;
  bottom: 26rpx;
}

.modal-content .btn {
  width: 464rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 50rpx;
  margin: 30rpx auto;
  text-align: center;
}

.modal-content .btn.blue {
  background: linear-gradient(155deg, #8342f1 15%, #1393fc 85%);
  color: #fff;
  border: none;
}

.modal-content .btn.orange {
  background: linear-gradient(155deg, #e98367 15%, #fac41d 85%);
  color: #fff;
  border: none;
}

.modal-content .btn.border {
  /* border: 1rpx solid #cf9f73;
    color: #cf9f73; */
  border: 1rpx solid #1392fd;
  color: #1693ff;
}
