.card-wrap {
    padding: 10rpx 0;
}


/* 列表媒体对象start */

.sm-btn {
    width: 130rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    font-size: 30rpx;
    color: #fff;
    padding: 0 10rpx;
    background: linear-gradient(to right, #e2c597, #cf9f73);
}

.media-wrap {
    margin: 20rpx auto;
    border-radius: 20rpx;
    width: 90%;
    box-shadow: 0rpx 0rpx 30rpx 10rpx rgb(233, 233, 233);
}


/* 媒体对象自定义内容 */

.center-right {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.btn-wrap {
    padding-right: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.time {
    color: rgb(136, 136, 136);
    font-size: 24rpx;
    margin-top: 10rpx;
}


/* 列表媒体对象end */


/* 横向滚动 */

.nav {
    height: 90rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 90rpx;
    background: #fff;
    font-size: 32rpx;
    white-space: nowrap;
    /* border-bottom: 1rpx solid #e6e6e6; */
}

.nav-item {
    width: 23%;
    display: inline-block;
    text-align: center;
    border-bottom: 1rpx solid #cf9e73;
    position: relative;
}

.nav-item.active {
    color: #cf9e73;
}

.slider-wrap {
    width: 80rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.navbar_slider {
    background: #cf9e73;
    height: 8rpx;
    width: 80rpx;
    margin: 0 auto;
}


/* 内容 */

.tab-content {
    overflow-y: scroll;
    background: #ffffff;
}

.media-item-wrap {
    height: 100%;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e7e7e7;
}

.media-item {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
    padding: 30rpx;
    justify-content: space-between;
}

.media-item .item-img {
    width: 180rpx;
    height: 180rpx;
    background: #ccc;
    border-radius: 20rpx;
}

.item-infos {
    width: 72%;
    height: 182rpx;
    display: flex;
    flex-direction: column;
    position: relative;
    justify-content: space-between;
}

.infos-title {
    font-weight: bold;
    font-size: 32rpx;
}

.icon-wrap {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 0 18rpx;
    position: relative;
}

.icon-wrap>text {
    color: #9fa0a5;
    margin-left: 10rpx;
}

.eye-icon {
    width: 34rpx;
}

.row {
    display: flex;
    flex-direction: row;
    align-items: center;
    position: relative;
}

.row.between {
    justify-content: space-between;
}

.oper-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    /* position: absolute;
    left: 10rpx;
    bottom: 0; */
}

.share {
    position: absolute;
    right: 10rpx;
    bottom: 0;
}