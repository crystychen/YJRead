                <view class="list-item">
                  <view class="img">
                    <image class="" src="https://soure.chudianad.com/static/welfare/product/thumbImg/201811191551200805.jpg" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload=""></image>
                    <view class="label-wrap">
                      <view class="label-bcg"></view>
                      <view class="label">原价: 18书签</view>
                    </view>
                  </view>
                </view>
                <view class="list-item">
                  <view class="img">
                    <image class="" src="https://soure.chudianad.com/static/welfare/product/thumbImg/201811191551200805.jpg" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload=""></image>
                    <view class="label-wrap">
                      <view class="label-bcg"></view>
                      <view class="label">原价: 18书签</view>
                    </view>
                  </view>
                </view>
                <view class="list-item">
                  <view class="img">
                    <image class="" src="https://soure.chudianad.com/static/welfare/product/thumbImg/201811191551200805.jpg" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload=""></image>
                    <view class="label-wrap">
                      <view class="label-bcg"></view>
                      <view class="label">原价: 18书签</view>
