/* 横向滚动 */

.nav {
    height: 90rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 90rpx;
    background: #fff;
    font-size: 32rpx;
    white-space: nowrap;
    box-shadow: 0rpx 0rpx 30rpx 0rpx rgba(96, 96, 96, 0.2);
}

.nav-item {
    width: 18%;
    display: inline-block;
    text-align: center;
    /* border-bottom: 1rpx solid #cf9e73; */
    position: relative;
    font-size: 30rpx;
    color: #c0c0c0;
}

.nav-item.active {
    color: #3772FB;
    /* font-weight: bold; */
}

.slider-wrap {
    width: 80rpx;
    position: absolute;
    bottom: 4rpx;
    left: 50%;
    transform: translateX(-50%);
}

.navbar_slider {
    background: #3772FB;
    height: 8rpx;
    width: 38rpx;
    margin: 0 auto;
    border-radius: 50rpx;
}

.tab-content {
    overflow-y: scroll;
    background: #ffffff;
}


/* 横向滚动 */

.banner-scroll {
    background-color: #fff;
    width: 100%;
    box-sizing: border-box;
    overflow-x: hidden;
    padding-bottom: 10rpx;
}

.scroll-view {
    width: 100%;
    /* height: 300rpx; */
    white-space: nowrap;
    margin: 0rpx 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
}

.scroll-item {
    /* height: 246rpx; */
    width: 180rpx;
    display: inline-block;
    margin: 0 20rpx;
    box-sizing: border-box;
}

.scroll-item .item-wrap {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.scroll-item .item-wrap .name {
    font-weight: bold;
}

.scroll-item:first-child {
    margin-left: 0;
}

.item-wrap image {
    width: 180rpx;
    height: 246rpx;
    border-radius: 20rpx;
    margin: 20rpx 0;
}