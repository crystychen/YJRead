    /* 弹窗按钮 */
    
    .modal-content .btn {
        width: 384rpx;
        height: 80rpx;
        line-height: 80rpx;
        color: #fff;
        font-size: 30rpx;
        border-radius: 50rpx;
        margin: 30rpx auto;
        text-align: center;
    }
    
    .modal-content .btn.active {
        /* background: linear-gradient(to right, #e2c597, #cf9f73); */
        background: #FFAA0F;
        color: #fff;
        border: none;
    }
    
    .modal-content .btn.border {
        border: 1rpx solid #FFAA0F;
        color: #FFAA0F;
    }