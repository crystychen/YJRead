/* pages/welcome/welcome.wxss */

/* checkbox */

.checkbox-group {
  width: 54%;
  margin: 90rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.checkbox {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  background: #f8f8f8;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  justify-content: center;
  margin: 20rpx;
  border-radius: 10rpx;
}
checkbox .wx-checkbox-input {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 背景的宽 */
  height: 40rpx; /* 背景的高 */
  border: none;
  background: transparent;
  position: absolute;
  bottom: -12rpx;
  right: -12rpx;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: linear-gradient(to bottom right, #7c42f2, #4966f9);
  border: 1rpx solid #0a3ec9;
  color: #fff;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%; /* 圆角 */
  width: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 40rpx; /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx; /* 对勾大小 30rpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.container {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}

.title {
  font-weight: bold;
  font-size: 30rpx;
  /* height: 60rpx;
    line-height: 60rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.name {
  position: relative;
  padding: 0 12rpx;
  margin: 0 20rpx;
  font-size: 32rpx;
}

.name::before {
  content: "";
  position: absolute;
  left: 0;
  top: 4rpx;
  height: 16rpx;
  width: 6rpx;
  /* background: #000; */
  border-top: 4rpx solid #000;
  border-left: 4rpx solid #000;
}

.name::after {
  content: "";
  position: absolute;
  bottom: 4rpx;
  right: 0;
  height: 16rpx;
  width: 6rpx;
  border-bottom: 4rpx solid #000;
  border-right: 4rpx solid #000;
}

.tip {
  font-size: 24rpx;
  margin: 20rpx 0;
}

.large-btn {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 50rpx;
  width: 460rpx;
  box-shadow: 0rpx 4rpx 14rpx 0rpx rgba(0, 0, 0, 0.3);
  position: relative;
  margin: 20rpx auto;
}

/* modal */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    opacity: 1;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}

.modal {
    position: fixed;
    top: 40rpx;
    left: 50%;
    transform: translate(-50%);
    width: 610rpx;
    height: 1050rpx;
    z-index: 1001;
    border-radius: 20rpx;
    background: #fff;
    overflow: hidden
}

.close {
    position: absolute;
    right: 20rpx;
    top: 10rpx;
    text-align: center;
    font-weight: bold;
    z-index: 1;
    font-size: 36rpx;
    color: #fff;
}

.close::before {
    content: "\2716";
}
.modal-header {
  width: 100%;
  height: 160rpx;
  background: #24418D;
  color: #fff;
  position: relative;
  /* border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx; */
  overflow: hidden
}
.header-name {
    height: 160rpx;
    line-height: 160rpx;
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    font-weight: bold;
}
.modal-header .img {
  width: 100%;
  height: 160rpx;
  /* background: #fff */
  background: #24418D;  
  position: absolute;
  top: 0
}
.modal .btn-container {
  position: absolute;
  bottom: 0
}
.modal .btn-container .btn {
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}