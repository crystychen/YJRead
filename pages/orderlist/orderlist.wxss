/* pages/myself/allorder/allorder.wxss */

@import '../../weui.wxss';
.contanier {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.container text,
view {
    font-size: 30rpx;
}


/* tab顶部导航 */

.top-tab {
    z-index: 1;
    top: 0;
    position: fixed;
    background: #fff;
    width: 100%;
    height: 75rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.top-bar-item {
    display: inline-block;
    width: 33%;
    color: #666;
    text-align: center;
    font-size: 28rpx;
}

.slider-wrap {
    width: 100%;
    position: absolute;
    bottom: 0;
    height: 0px;
    border-bottom: 1rpx solid #ccc;
    z-index: 500;
}

.weui-navbar {
    background: #fff;
    border: none;
    padding-bottom: 2rpx;
}

.weui-navbar__slider {
    left: 20rpx;
    top: 0rpx;
    width: 60px;
    height: 1px;
    z-index: 501;
    background-color: #ce9c73;
}

.weui-navbar__item.weui-bar__item_on .weui-navbar__title {
    color: #ce9c73;
}


/* tab顶部导航end */

.content {
    /* padding-top: 100rpx; */
    /* margin-top: 20rpx; */
    /* overflow-x: hidden; */
    /* padding-bottom: 140rpx; */
    box-sizing: border-box
}


/* 滚动试图样式 */

.img {
    height: 168rpx;
    width: 123rpx;
    margin-right: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 20rpx 4rpx #f9f8f7;
}


/*每个item样式*/

.list {
    width: 100%;
    background: #fff;
}

.list-item {
    width: 90%;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
    margin: 20rpx auto;
    color: #333;
    background: #fff;
    border-radius: 20rpx;
    box-shadow: 6rpx 6rpx 30rpx 4rpx #e0e0e0;
    box-sizing: border-box;
}

.item-body {
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    margin: 0 20rpx;
    padding-top: 10rpx;
    padding-bottom: 30rpx;
    box-sizing: border-box;
}

.item-headerview {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    padding: 20rpx;
    background: #fff;
    margin: 0 20rpx;
    box-sizing: border-box;
    position: relative;
}


/*右边信息样式*/

.goodsinfo {
    width: 500rpx;
    display: flex;
    /* margin-left: 20px; */
    flex-direction: column;
    position: relative;
}

.goodsinfo .author {
    font-size: 26rpx;
    color: #a5a5ac;
}

.goodsname {
    display: inline-block;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

.goodsinfos-desc {
    font-size: 26rpx;
    color: #a5a5ac;
    height: 74rpx;
    overflow: hidden;
    display: -webkit-box;
    white-space: initial;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.orderPrice {
    margin-left: 10rpx;
    display: inline-block;
    color: #8e8e93;
}


/* 
.orderPrice::after {
  content: "+";
}

.orderPrice:last-child::after {
  content: "";
} */

.pricenum {
    color: #cf9f73;
    font-weight: bold;
    padding: 0 8rpx;
}

.orderNum {
    font-size: 12px;
    margin-top: 15rpx;
    letter-spacing: 1rpx;
    position: absolute;
    right: 0;
    bottom: 0;
    color: #999;
}

.orderTotal {
    text-align: right;
    height: 88rpx;
    line-height: 88rpx;
    display: block;
    padding: 0 24rpx;
}

.ordercode {
    font-size: 26rpx;
    font-weight: bold;
    color: #8c8c94;
}

.ordertime {
    color: #818181;
    font-size: 26rpx;
}

.status {
    position: absolute;
    right: 30rpx;
    font-size: 28rpx;
    /* color: #000; */
}

.status.done {
    color: #cecece;
}

.status.doing {
    color: #ff3931;
}

.status.conment {
    color: #ff8f01;
}

.line {
    width: 100%;
    height: 0rpx;
    border-bottom: 1rpx solid #f3f3f3;
}

.tips {
    flex-direction: row;
    justify-content: center;
    font-size: 16sp;
}

.item-bottom {
    display: block;
    align-items: center;
    background: #fff;
}

.item-bottom view {
    font-size: 28rpx;
}

.totalprice {
    color: #fe6e00;
    margin-right: 8rpx;
}

.amount {
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #333;
    /* flex: 1; */
}

.btn-container {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    text-align: right;
    background: #fff;
    vertical-align: middle;
    margin: 20rpx 10rpx;
    margin-bottom: 10rpx;
}

.btn {
    margin: 0 auto;
    width: 50%;
    border-radius: 50rpx;
    font-size: 30rpx;
}

.btn_contact {
    width: 150rpx;
    line-height: 40rpx;
    background-color: #fff;
    color: #666;
    font-size: 28rpx;
    display: inline-block;
    border-radius: 6rpx;
    padding: 6rpx 10rpx;
    margin-left: 20rpx;
    text-align: center;
    border: 1rpx solid #999;
    box-sizing: content-box;
}

.btn::after {
    border: none;
}

.btn_contact::after {
    border: none;
    padding: 0;
    margin: 0;
}

.nomore-tips {
    text-align: center;
    /* color: #a1a1a1; */
    color: #424242;
    font-size: 26rpx;
    padding: 10rpx;
    margin-bottom: 20rpx;
}

.view-detail {
    position: absolute;
    right: 30rpx;
    bottom: 0;
    font-size: 28rpx;
}

.empty-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.scrollview-list {
    /* position: fixed;
  top: 0; */
    padding-bottom: 100rpx;
    /* box-sizing: border-box */
}


/* 剩余时长样式 */

.time-num {
    color: #3971fb;
    padding: 0 10rpx;
    margin-right: 8rpx;
}


/* menu */

.menu-wrap {
    /* width: 100%; */
    box-sizing: border-box;
    margin: 30rpx;
    margin-bottom: 10rpx;
    /* overflow: hidden; */
}

.menu {
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(96, 96, 96, 0.2);
    position: relative;
}

.menu-item {
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    /* margin: 0 20rpx; */
    margin-right: 0;
    flex-direction: row;
    align-items: center;
    position: relative;
    /* border-bottom: 1rpx solid #f2f2f2; */
    padding: 0 20rpx;
    box-sizing: border-box;
}

.menu-item .img {
    width: 36rpx;
    height: 36rpx;
    margin-right: 0;
}

.menu-item .right {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.menu-item .badge {
    margin-right: 20rpx;
}

.menu-item .cart {
    width: 18rpx;
    height: 18rpx;
    border-top: 4rpx solid #8e8e93;
    border-right: 4rpx solid #8e8e93;
    transform: rotate(45deg);
}

.menu-item .menu-title {
    color: #424242;
    font-size: 32rpx;
    margin: 0 20rpx;
}

.menu-item .desc {
    color: #c5c5c5;
    position: absolute;
    right: 30rpx;
}