.pricenum {
    color: #cf9f73;
    font-weight: bold;
    padding: 0 8rpx;
}

.orderNum {
    font-size: 12px;
    margin-top: 15rpx;
    letter-spacing: 1rpx;
    position: absolute;
    right: 0;
    bottom: 0;
    color: #999;
}

.orderTotal {
    text-align: right;
    height: 88rpx;
    line-height: 88rpx;
    display: block;
    padding: 0 24rpx;
}

.ordercode {
    font-size: 26rpx;
    font-weight: bold;
    color: #8c8c94;
}

.ordertime {
    color: #818181;
    font-size: 26rpx;
}

.status {
    position: absolute;
    right: 30rpx;
    font-size: 28rpx;
    /* color: #000; */
}

.status.done {
    color: #cecece;
}

.status.doing {
    color: #ff3931;
}

.status.conment {
    color: #ff8f01;
}

.line {
    width: 100%;
    height: 0rpx;
    border-bottom: 1rpx solid #f3f3f3;
}

.tips {
    flex-direction: row;
    justify-content: center;
    font-size: 16sp;
}

.item-bottom {
    display: block;
    align-items: center;
    background: #fff;
}

.item-bottom view {
    font-size: 28rpx;
}

.totalprice {
    color: #fe6e00;
    margin-right: 8rpx;
}

.amount {
    margin-right: 20rpx;
    font-size: 24rpx;
    color: #333;
    /* flex: 1; */
}

.btn-container {
    /* position: absolute;
  right: 0;
  bottom: -6rpx; */
    display: flex;
    align-items: center;
    justify-content: flex-end;
    text-align: right;
    background: #fff;
    vertical-align: middle;
    margin: 20rpx 10rpx;
    margin-bottom: 10rpx;
}

.btn {
    line-height: 40rpx;
    background-color: #fff;
    color: #666;
    font-size: 28rpx;
    display: inline-block;
    border-radius: 6rpx;
    padding: 6rpx 20rpx;
    margin-left: 20rpx;
    text-align: center;
    /* border: 1rpx solid #999; */
    box-sizing: border-box;
}

.btn_contact {
    width: 150rpx;
    line-height: 40rpx;
    background-color: #fff;
    color: #666;
    font-size: 28rpx;
    display: inline-block;
    border-radius: 6rpx;
    padding: 6rpx 10rpx;
    margin-left: 20rpx;
    text-align: center;
    border: 1rpx solid #999;
    box-sizing: content-box;
}

.btn::after {
    border: none;
}

.btn_contact::after {
    border: none;
    padding: 0;
    margin: 0;
}

.nomore-tips {
    text-align: center;
    color: #a1a1a1;
    font-size: 24rpx;
    padding: 10rpx 10rpx;
}

.view-detail {
    position: absolute;
    right: 30rpx;
    bottom: 0;
    font-size: 28rpx;
}