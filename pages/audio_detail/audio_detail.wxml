<!-- pages/audio_detail/index.wxml -->
<view class="container">
  <view class="audio-wrap">
    <!-- 背景图,高斯模糊 -->
    <!-- <view class="bcg">
      <image class="" src="/images/hebe.jpg" mode="scaleToFill" lazy-load="false" binderror="" bindload=""></image>
    </view> -->
    <!-- 灰色蒙层 -->
    <!-- <view class="bcg-gray"></view> -->
    <!-- play层 -->
    <view class="audio-infos">
      <!-- 旋转图 -->
      <view class="rotate-disk-container">
        <view class="rotate-disk ">
          <image class="poster" mode="" src="{{book.img}}"></image>
        </view>
      </view>
      <!-- 操作 -->
      <view class="title-container">
        <view class="title">{{book.bookName}}</view>
        <view class="author">{{book.author}}</view>
      </view>
      <view class="slider-container">
        <text class="slider-time">{{currentPosition === 0 ? '' : currentPosition}}</text>
        <slider value="{{sliderValue}}" bindchange="bindSliderchange" activeColor="#1393FC" backgroundColor="#E2E2E2" style="width: 64%;margin: 0;" block-size="8" block-color="#fff" />
        <text class="slider-time">{{duration === 0 ? '' : duration}}</text>
      </view>
      <view class="operation-container">
        <view class="" bindtap="bindTapPrev">
          <image class="md_icon" src="/images/prev.png"></image>
        </view>
        <view class="play-icon" bindtap="bindTapPlay">
          <!-- {{pauseStatus === false ? '暂停' : '播放'}} -->
          <view class="icon-wrap">
            <block wx:if="{{pauseStatus === false}}">
              <!-- <image class="icon" src="/images/play.png"></image> -->
              <view class="icon">
                <view class="suspend"></view>
              </view>
            </block>
            <block wx:else>
              <!-- <image class="icon" src="/images/pause.png"></image> -->
              <view class="icon">
                <view class="cart"></view>
              </view>
            </block>
          </view>
        </view>
        <view class="" bindtap="bindTapNext">
          <image class="md_icon" src="/images/next.png"></image>
        </view>
      </view>
      <view class="desc">{{}}</view>
    </view>
  </view>
  <view class="chapter cell-group">
    <!-- <wux-cell-group title="章节">
      <block wx:for="{{chapters}}" wx:key="key">
        <wux-cell bindclick="onClickCell">
            <view class="" slot="header" hover-class="none" hover-stop-propagation="false">
              {{index + 1}}: {{item.title}}
            </view>
            <view class="" slot hover-class="none" hover-stop-propagation="false">
              rt,lum5m56kuo65l
            </view>
        </wux-cell>
      </block>
    </wux-cell-group> -->
    <view class="cell-group_hd">章节</view>
    <view class="cell-group_bd">
      <block wx:for="{{chapters}}" wx:key="key">
        <view class="cell">
          <view class="cell_hd">
            <block wx:if="{{ thumb }}">
              <image class="cell_thumb" src="{{ thumb }}" />
            </block>
          </view>
          <view class="cell_bd">{{index+1}}: {{item.title}}</view>
          <view class="cell_desc">
            <view class="cell-lock">
              <block wx:if="{{item.free}}">
                <!-- <wux-tag color="#1193FE"></wux-tag> -->
                <view class="tag">试听</view>
              </block>
              <block wx:else>
                <image class="xs_icon" src="/images/lock.png"></image>
              </block>
            </view>
            <view class="clock-wrap">
              <image class="xs_icon" src="/images/clock.png"></image>
              <text class="clock">{{item.duration}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
  <view class="card-wrap">
    <view class="media-wrap" slot="body" hover-class="none" hover-stop-propagation="false">
      <wux-media thumb="https://soure.chudianad.com/static/advert/iconUrl/201810251836509322.jpg" thumb-style="border-radius: 300rpx" title="朱涛" label="专业播音·中国大陆">
        <view class="btn-wrap center-right" data-appid="{{item.appid}}" data-path="{{item.path}}" slot>
          <view class="sm-btn btn" bindtap="bindMore">更多</view>
        </view>
      </wux-media>
    </view>
  </view>
  <view class="accordion-group-wrap">
    <wux-accordion-group title="" default-current="{{ ['0'] }}">
      <wux-accordion title="关于本书" content="{{book.about}}"></wux-accordion>
    </wux-accordion-group>
  </view>
  <view class="accordion-group-wrap">
    <wux-accordion-group title="">
      <wux-accordion title="本书金句" content="{{book.goldWord}}"></wux-accordion>
    </wux-accordion-group>
  </view>
  <view class="btn-container fixed bottom">
    <view class="btn lg-btn active">19书签兑换</view>
  </view>
</view>