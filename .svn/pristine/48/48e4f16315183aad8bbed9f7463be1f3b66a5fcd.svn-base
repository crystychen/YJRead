/* 分享朋友圈海报 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1002;
  color: #fff;
}

.modal-dialog {
  width: 100%;
  height: 95%;
  overflow: hidden;
  background: #f9f9f9;
  border-radius: 15rpx;
}

.share_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.share_content image {
  width: 90%;
  height: 80%;
  border: 2rpx solid #f2f2f2;
}

.share_content text {
  color: gray;
  font-size: 30rpx;
  text-align: center;
  margin: 20rpx 0 10rpx;
}

.share_content button {
  background-color: green;
  color: white;
  font-size: 30rpx;
  width: 70%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

.modal-view {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  height: 100%;
  position: fixed;
  z-index: 999;
  margin: 0 auto;
}

.sss {
  position: absolute;
  top: 0;
  left: 50%;
  width: 80%;
  height: 100%;
  z-index: 1003;
  transform: translateX(-50%);
}
