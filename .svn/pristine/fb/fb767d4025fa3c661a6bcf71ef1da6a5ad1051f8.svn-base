<!--pages/myself/allorder/allorder.wxml-->
<view class="contanier">
  <view class='content'>
    <!--列表list组件-->
    <scroll-view class="scrollview-list" scroll-y="true" style="height:{{scrollHeight}}px" bindscroll="scroll" bindscrolltolower="bindscrolltolower" scroll-top="{{scrollTop}}">
      <view class='list'>
        <block wx:for="{{orderInfos}}" wx:key="{{index}}">
          <view class="list-item">
            <view bindtap='detailOrder' data-orderId='{{item[1]}}'>
              <view class="item-headerview">
                <view class="headerview-wrap">
                  <text class='ordercode'>订单号 : {{item[1]}}</text>
                </view>
                <!-- 根据订单状态展示不同信息 -->
                <view class="status doing" wx:if='{{item[2] == 2 || item[2] == 4}}'>进行中</view>
                <view class="status conment" wx:elif='{{item[2] == 5}}'>待评价</view>
                <view class="status done" wx:elif='{{item[2] == 13}}'>已完成</view>
              </view>
              <view class="item-body">
                <image class="img" src="{{item[5]}}" mode='scaleToFill' />
                <view class="goodsinfo">
                  <text class="goodsname">{{item[4]}}</text>
                  <view class='row'>
                    <image class="sm_icon" src='/images/bookMark_active.png'></image>
                    <!-- <text class="orderPrice" wx:if="{{item[7]}}"><text class="pricenum" >{{item[7]}}</text>位好友</text>
                    <text class="orderPrice" wx:if="{{item[6]}}"><text class="pricenum" >{{item[6]}}</text>元</text> -->
                    <text class="orderPrice" wx:if="{{item[10]}}">书签所需<text class="pricenum">{{item[10]}}</text>张</text>
                  </view>
                  <view class='view-detail' data-orderId='{{item[1]}}' bindtap='detailOrder'>查看订单></view>
                </view>
              </view>
            </view>
          </view>
        </block>
      </view>
      <view class="nomore-tips" hidden='{{orderInfos.length}}'>暂无订单</view>
    </scroll-view>
  </view>
</view>