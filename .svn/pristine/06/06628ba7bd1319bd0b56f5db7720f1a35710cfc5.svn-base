/* components/comLogin/comLogin.wxss */
/* @import '../../base.wxss'; */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background:rgba(0,0,0,.5);
  opacity: 1;
  overflow: hidden;
  z-index: 888;
  color: #fff;
}
.modal{
  position: fixed;
  top: 10rpx;  
  left: 50%;
  transform: translate(-50%);
  width: 90%;
  z-index: 999;
  /* margin: 15rpx; */
}
.modal-content {
  /* height: 980rpx; */
  background: #fff;  
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 1;
  padding: 20rpx;  
  margin-top: 82rpx;
}
.modal-content > text {
  font-size: 32rpx;
  text-align: center;
  color: #000;
  font-weight: bold;
}
.modal-content .tip {
  margin-top: 36rpx;
  position: relative;
  height:84rpx;
}
.tip::after {
  content: ">";
  font-size: 50rpx;
  position: absolute;
  right: -50rpx;
  top: 50%;
  transform: translateY(-50%);

}
.modal-content .desc {
  font-size: 28rpx;
  font-weight: normal;
  color: #000;
}
.modal-content .btn-container {
  width: 100%;
}
.modal-content .img {
  width: 410rpx;
  height: 410rpx;
  background: #F8F8F8;
  margin: 20rpx 0;
}
.price {
  margin: 10rpx 0;
  position: relative;
  height: 84rpx;
  display: flex;
  align-items: center;
}
.border {
  margin-left: 10rpx;
  border: 1rpx solid #f9d1c2;
  color: #fe6a01;
  background-color: #fff5e9;
  border-radius: 8rpx;
  width: 60rpx;
  height: 32rpx;
  line-height: 30rpx;
  padding: 0 4rpx;
}
.price > text {
  color: #FD6A03;
  line-height: 40rpx;
  font-weight: bold;
}
.price > text::before {
  content: "+"
}
.price > text:first-child::before {
  content: ""
}
.modal-content .btn {
  width: 440rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 50rpx;
  margin: 30rpx auto;
}
.modal-content .btn.blue {
  background: linear-gradient(to right, #23BAE0, #31DCDF);
}
.modal-content .btn.orange {
  background: linear-gradient(to right, #FD6A03, #FFA130);
}
.close{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 0;
}