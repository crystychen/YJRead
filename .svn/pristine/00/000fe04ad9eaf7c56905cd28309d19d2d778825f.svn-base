
/* 分享面板 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  opacity: 1;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.modal.modal-share {
  position: fixed;
  bottom: 10rpx;
  left: 50%;
  transform: translate(-50%);
  width: 90%;
  height: 300rpx;
  z-index: 1001;
  background: #EFEFF4;
  border-radius: 30rpx;
  padding: 20rpx;
  box-sizing:border-box;
}
.modal-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #E5E5EB;
}
.share-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 10rpx;
}
.share-item > text {
  color: #B5B5B6;
  margin-top: 20rpx;
  font-size: 26rpx;
}
.item-image-wrap > image {
  width: 50rpx;
  height: 50rpx;
}
.item-image-wrap {
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 20rpx;
  position: relative;
}
.btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  text-align: center;
  font-weight: bold;
  border-radius: 50rpx;
  box-sizing: border-box;
}
.btn-cancel {
  color:#909094;
  font-weight: normal;
}
.share-btn {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background-color: transparent;
  z-index: 1;
}
.w-vertical-align-c {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}