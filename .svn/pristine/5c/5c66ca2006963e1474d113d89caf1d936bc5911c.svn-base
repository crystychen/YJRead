/* pages/my-collect/my-collect.wxss */

.tab-content{
    overflow-y: scroll;
}
.media-item-wrap{
    height: 100%;
    box-sizing: border-box;
    border-bottom: 1rpx solid #E7E7E7;    
}
.media-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
  justify-content:space-between;
}
.media-item .item-img {
  width: 242rpx;
  height: 182rpx;
  background: #ccc;
}
.item-infos {
  width: 60%;
  height: 182rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  justify-content:space-between;
}
.infos-title {
  font-weight: bold;
  font-size: 32rpx;
}
.icon-wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 20rpx;
  position: relative;
}
.icon-wrap > text {
  color: #9FA0A5;
  margin-right: 6rpx;
  display: inline-block;
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  position:relative;
}
.row > text {
  color: #9FA0A5;
}
.oper-container {
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 0;
  bottom: 0;
}

/* 阅读需知弹窗 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  /* overflow: hidden; */
  z-index: 888;
  color: #fff;
}

.modal.modal-read-tips {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 500rpx;
  /* height: 566rpx; */
  height: 410rpx;
  background: #fff;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 999;
}

.modal-title {
  height: 110rpx;
  width: 100%;
  line-height: 110rpx;
  text-align: center;
  color: #cf9e73;
  font-size: 36rpx;
  font-weight: bold;
}

.modal-content > text {
  color: #8f8f93;
  padding: 0 30rpx;
  width: 90%;
  display: block;
  margin: 20rpx auto;
}

.btn-know {
  width: 226rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  text-align: center;
  border-radius: 50rpx;
  box-sizing: border-box;
  color: #fff;
  background: linear-gradient(to right, #e2c597, #cf9f73);
  position: absolute;
  bottom: 40rpx;
}