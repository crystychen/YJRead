<!--pages/my/my.wxml-->
<view class='container'>
  <view class='user-infos-wrap'>
    <view class='user-infos'>
      <button class="openbtn" wx:if='{{authLevel != 2}}' open-type="getUserInfo" bindgetuserinfo="onGotUserInfo"></button>
      <image class='header_img' src='{{userInfo && userInfo.avatarUrl? userInfo.avatarUrl:"/images/nologinuser.png"}}'></image>
      <text class='user-name'>{{userInfo.nickName? userInfo.nickName:"点击头像立即登录" }}</text>
      <view class='row'>
        <image class="sm_icon" src='/images/bookMark_active.png'></image>
        <text class='infos-desc'>已有<text class="num">{{gold}}</text>张书签</text>
      </view>
      <view class='row num-row'>
        <view class="num-item">
          <text>{{validViewCount}}</text>
          <text>今日有效阅读</text>
        </view>
        <view class="num-item">
          <text>{{viewCount}}</text>
          <text>今日总计阅读</text>
        </view>
        <view class="num-item">
          <text>{{todaygold}}</text>
          <text>今日阅读书签</text>
        </view>
      </view>
    </view>
  </view>
  <view class="footer">
    <view class='menu-item' bindtap='toMyCollect'>
      <image class="img" src='/images/star-border-icon.png'></image>
      <text class='menu-title'>我的收藏 <text class="collectNum">({{collectNum}})</text></text>
      <view class='cart-right'></view>
    </view>
    <view class='menu-item' bindtap="toOrderList">
      <image class="img" src='/images/myorder-icon.png'></image>
      <text class='menu-title'>我的订单</text>
      <view class='cart-right'></view>
    </view>
    <view class='menu-item'>
      <image class="img" src='/images/contact-icon.png'></image>
      <text class="menu-title">联系客服</text>
      <!-- <text class="desc">回复“1”加交流群</text> -->
      <view class='cart-right'></view>
      <button open-type='contact' class="btn-session" session-from='weapp'>
      </button>
    </view>
  </view>
</view>